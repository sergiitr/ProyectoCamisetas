extends ../layouts/main

block contenido
    // Asegúrate de que este enlace apunte al CSS de adición
    link(rel="stylesheet", href="/css/camiseta/add.css") 
    
    // Contenedor principal centrado
    .container.neobrutalismo-add-container
        
        // --- TARJETA DE ADICIÓN NEOBRUTALISTA ---
        .neobrutalismo-add-card.mx-auto.p-4 
            
            h2.neobrutalismo-heading-add Añadir camiseta
            
            form(action="/admin/Gestionar/add" method="POST") 
                // TALLA
                .mb-3
                    label.neobrutalismo-label-add(for="talla") Talla: 
                    select.neobrutalismo-select-add(name="talla", id="talla", required) 
                        option(value="xxs") XXS 
                        option(value="xs") XS
                        option(value="s") S
                        option(value="m") M
                        option(value="l") L
                        option(value="xl") XL
                        option(value="xxl") XXL
                
                // SEXO
                .mb-3
                    label.neobrutalismo-label-add(for="sexo") Sexo: 
                    select.neobrutalismo-select-add(name="sexo", id="sexo", required) 
                        option(value="chica") chica 
                        option(value="chico") chico
                        option(value="unisex") unisex
                        option(value="niño") niño
                        option(value="niña") niña
                        option(value="unisex_infantil") unisex_infantil
                
                // COLOR
                .mb-3
                    label.neobrutalismo-label-add(for="color") Color
                    input.neobrutalismo-input-add(type="color", name="color", id="color", required)
                
                // MARCA
                .mb-3
                    label.neobrutalismo-label-add(for="marca") Marca
                    // Nota: Se asume que 'marca' debe ser type="text"
                    input.neobrutalismo-input-add(type="text", name="marca", id="marca", required)
                
                // STOCK
                .mb-3
                    label.neobrutalismo-label-add(for="stock") Stock
                    input.neobrutalismo-input-add(type="number", name="stock", id="stock" min="0" max="1000", required)
                
                // PRECIO
                .mb-3
                    label.neobrutalismo-label-add(for="precio") Precio 
                    input.neobrutalismo-input-add(type="number", name="precio", id="precio", step="any", required)
                
                // ACTIVO (Checkbox)
                .mb-3.d-flex.align-items-center
                    label.neobrutalismo-check-label(for="activo") Activo
                    input.neobrutalismo-check-input(type="checkbox", name="activo", id="activo")
                    
                // BOTONES DE ACCIÓN (Separados en extremos)
                .d-flex.justify-content-between.mt-4
                    // Botón de Enviar (Submit - Verde Menta)
                    button.neobrutalismo-submit-button(type="submit") Enviar 
                    // Botón de Cancelar (Secundario - Rojo Peligro)
                    a.neobrutalismo-cancel-button(href=`/admin/Gestionar`) Cancelar