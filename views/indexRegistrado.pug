doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Inicio Neobrutalista
    // Enlace a los archivos CSS de Bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", crossorigin="anonymous")
    
    // ENLACE A ESTILOS NEOBRUTALISTAS ESPECÍFICOS (Reemplazando el bloque <style>)
    link(rel="stylesheet", href="/css/mix/indexRegistrado.css") 
    
  body
    .center-container
      div.neobrutalista-welcome-card
        // Título Neobrutalista
        h1.neobrutalista-heading-welcome Bienvenido a la tienda de camisetas #{user.username} !
        
        div.action-link
          if !isAdmin 
            // Botón para USUARIO NORMAL (Ver Camisetas): Azul Oscuro / Hover Rosa
            a.neobrutalista-button-welcome(href="/camisetas", class="btn btn-lg w-100 neobrutalista-button") VER CAMISETAS
          
          if isAdmin
            // Botón para ADMINISTRADOR (Gestionar Tienda): Rojo Peligro (Danger)
            a.neobrutalista-button-welcome(href="/admin/Gestionar", class="btn btn-lg w-100 neobrutalista-button-admin") GESTIONAR TIENDA
    
    // Script de Bootstrap 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous")