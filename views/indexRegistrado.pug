doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Inicio
    // Enlace a los archivos CSS de Bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    // Estilos personalizados
    style.
      body {
        background-color: #dcebf9; /* Color de fondo claro */
      }
      .center-container {
        /* Centra el contenido en el medio de la pantalla */
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }
      .welcome-card {
        /* Tarjeta principal para el contenido */
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
        max-width: 500px;
        width: 100%;
      }
      .welcome-card h1 {
        color: #007bff; /* Color primario de Bootstrap para el encabezado */
        margin-bottom: 20px;
        font-weight: 700;
      }
      .action-link {
        margin-top: 20px;
      }

  body

    div.center-container
      div.welcome-card
        h1 Bienvenido a la tienda de camisetas #{user.username} !
        
        div.action-link
          if !isAdmin 
            // Botón primario de Bootstrap
            a(href="/camisetas", class="btn btn-primary btn-lg w-100") Ver camisetas
          
          if isAdmin
            // Botón de éxito (verde) de Bootstrap para el administrador
            a(href="/admin/indexRegistrado", class="btn btn-success btn-lg w-100") Gestionar Tienda
    
    // Script de Bootstrap (opcional, pero útil si se usan componentes interactivos)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
