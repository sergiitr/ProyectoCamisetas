extends ../layouts/main

block contenido
    // Enlace al CSS específico de eliminación
    link(rel="stylesheet", href="/css/usuarios/del.css") 

    .container.neobrutalismo-delete-container.py-5
        .neobrutalismo-delete-card.p-4.mx-auto
            
            h2.neobrutalismo-heading-delete.text-center Dar de baja un usuario
            
            // Advertencia explícita en el estilo Rosa Fosforito
            .neobrutalismo-alert-danger.mb-4.p-3
                p.text-center.fw-bold ¡Atención! Estás a punto de borrar permanentemente la cuenta de este usuario.

            form(method="POST")    
                .mb-3
                    label.neobrutalismo-label-delete(for="username") Username
                    input.neobrutalismo-input-delete(type="text", name="username", id="username", disabled, value = datos.username)
                
                .mb-3
                    label.neobrutalismo-label-delete(for="password") Password
                    input.neobrutalismo-input-delete(type="text", name="password", id="password", disabled, value = datos.password)
                
                .mb-3
                    label.neobrutalismo-label-delete(for="email") Email
                    input.neobrutalismo-input-delete(type="text", name="email", id="email", disabled, value = datos.email)
                
                .mb-3
                    label.neobrutalismo-label-delete(for="tlfn") Tlfn
                    input.neobrutalismo-input-delete(type="number", name="tlfn", id="tlfn", disabled, value = datos.tlfn)
                
                .mb-3
                    label.neobrutalismo-label-delete(for="direccion") Direccion
                    input.neobrutalismo-input-delete(type="text", name="direccion", id="direccion", disabled, value=datos.direccion)
                
                .mb-3.d-flex.align-items-center
                    input.neobrutalismo-check-input.me-2(type="checkbox", name="activo", id="activo", disabled, checked= datos.activo==1)
                    label.neobrutalismo-check-label.mb-0(for="activo") Activo
                
                .mb-5
                    label.neobrutalismo-label-delete(for="tipo") Tipo
                    input.neobrutalismo-input-delete(type="text", name="tipo", id="tipo", disabled, value=datos.tipo)
                
                .d-flex.justify-content-center.gap-3.mt-4
                    // Botón principal (Borrar) en Rojo Peligro
                    button.neobrutalismo-delete-button.btn-lg(type="submit") Borrar 
                    // Botón secundario (Cancelar) en Verde Menta
                    a.neobrutalismo-cancel-button.btn-lg(href="/admin/usuario/list") Cancelar