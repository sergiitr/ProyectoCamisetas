extends ../layouts/main

block contenido
  // Enlace al CSS específico de eliminación
  link(rel="stylesheet", href="/css/carrito/del.css") 
  
  .container.neobrutalismo-delete-container.py-5
    
    // Tarjeta principal con sombra de peligro
    .neobrutalismo-delete-card.p-4.mx-auto
      
      h1.text-center.neobrutalismo-heading-delete Confirmar Eliminación

      // Alerta de peligro (rojo/rosa)
      .neobrutalismo-alert-danger.text-center.mb-4.p-3
        h4.neobrutalismo-alert-heading ¡Confirmación requerida!
        p.neobrutalismo-alert-text.fs-5 | ¿Deseas eliminar la camiseta
          strong #{camiseta.marca} - #{camiseta.color} (#{camiseta.talla})
          |  de tu carrito?

      // Tarjeta de detalles (opcionalmente podríamos usar la misma tarjeta .neobrutalismo-delete-card si estuviera dentro)
      .neobrutalismo-info-card.shadow-sm.mb-4.p-3
        ul.list-unstyled.neobrutalismo-info-list.fs-5
          li 
            span.neobrutalismo-label-delete Cantidad en carrito:
            span.neobrutalismo-info-value #{cantidadActual}
          li 
            span.neobrutalismo-label-delete Precio unitario:
            span.neobrutalismo-info-value #{precioVenta}€

      .d-flex.justify-content-center.gap-3
        form(action=`/carrito/del/camiseta/${camiseta.id}`, method='POST')
          // Botón principal de peligro (rojo)
          button.neobrutalismo-delete-button.btn-lg(type='submit') Sí, eliminar
        
        // Botón secundario para cancelar (verde menta)
        a.neobrutalismo-cancel-button.btn-lg(href='/carrito') No, volver