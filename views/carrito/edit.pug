extends ../layouts/main

block contenido

  link(rel="stylesheet", href="/css/carrito/edit.css") 
  
  // Título (Inyectado en el <body>, aunque su lugar ideal es el <head>)
  title Editar Cantidad de Camiseta

  // Contenido Principal
  .d-flex.justify-content-center.align-items-center.neobrutalismo-edit-carrito-container
    .container
      .row.justify-content-center
        .col-lg-8.col-xl-6

          // Tarjeta principal (Aplicando la clase de estilo)
          .card.neobrutalismo-edit-carrito-card.shadow-sm
            .card-body.p-4

              // Título (Aplicando la clase de estilo)
              h2.text-center.neobrutalismo-heading-edit.mb-4
                | Editar Cantidad en Carrito
              
              // Información del Producto
              // CLASE APLICADA: Título del producto
              h3.mb-2.neobrutalismo-edit-carrito-product-title | Camiseta:  #{camiseta.marca} <br/> | Talla :  #{camiseta.talla.toUpperCase()}<br/> | Stock disponible:  #{camiseta.stock}

              // FORMULARIO
              form(action=`/carrito/edit/camiseta/${camiseta.id}`, method='POST')
                .mb-4
                  // Label (Aplicando la clase de estilo)
                  label.form-label.neobrutalismo-edit-carrito-label(for='cantidad')
                    strong Nueva Cantidad:
                    
                  // Input (Aplicando la clase de estilo)
                  input.form-control.neobrutalismo-edit-carrito-input#cantidad(
                    type='number', 
                    name='cantidad', 
                    min='1', 
                    max=camiseta.stock, 
                    value=cantidadActual, 
                    required
                  )
                  .neobrutalismo-edit-carrito-product-cuantity 
                    | La cantidad actual en tu carrito es: 
                    strong #{cantidadActual}.

                // Botón Submit (Aplicando la clase de estilo)
                button.neobrutalismo-edit-carrito-submit-button.w-100(type='submit') 
                  | Actualizar Cantidad

              // Botón Cancelar (Aplicando la clase de estilo)
              a.neobrutalismo-edit-carrito-cancel-button.w-100.mt-3.text-center(href='/carrito/list') 
                | Cancelar y Volver al Carrito

  // Bootstrap JS (Inyectado al final del block contenido/body)
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")