doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Editar Cantidad de Camiseta

    // Bootstrap 5
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css",
      rel="stylesheet"
    )

    // CSS PERSONALIZADO
    style.
      /* Wrapper centrado */
      .center-wrapper {
        min-height: 100vh;               
        display: flex;
        flex-direction: column;
        justify-content: center;         
        align-items: center;             
        padding: 20px;
        background-color: #f8f9fa;
      }

      /* Ajustes principales */
      .card {
        max-width: 650px;
        width: 100%;
        border-radius: 12px;
      }

      h1.my-4 {
        text-align: center;
        font-weight: 600;
      }

      button.btn-primary {
        font-size: 1.1rem;
        padding: 10px;
      }

      a.btn-outline-secondary {
        width: 100%;
        text-align: center;
      }

      p.text-muted {
        font-size: 1rem;
      }

  body
    .center-wrapper
      .container
        h1.my-4 Editar Cantidad en Carrito
        
        .card.shadow-sm
          .card-body
            h3 Camiseta: #{camiseta.marca} - #{camiseta.talla.toUpperCase()}
            p.text-muted 
              | Stock disponible: 
              strong #{camiseta.stock}

            // FORMULARIO CORREGIDO: ruta POST correcta para actualizar cantidad
            form(action=`/carrito/edit/camiseta/${camiseta.id}`, method='POST')
              .mb-3
                label.form-label(for='cantidad')
                  strong Nueva Cantidad:
                input.form-control#cantidad(
                  type='number', 
                  name='cantidad', 
                  min='1', 
                  max=camiseta.stock, 
                  value=cantidadActual, 
                  required
                )
                .form-text.text-primary 
                  | La cantidad actual en tu carrito es: 
                  strong #{cantidadActual}.

              button.btn.btn-primary.w-100(type='submit') Actualizar Cantidad

            a.btn.btn-outline-secondary.mt-3(href='/carrito/list') Cancelar y Volver al Carrito

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
