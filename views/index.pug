doctype html
html
  head
    title Inicio Neobrutalista
    // Enlace a los archivos CSS de Bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", crossorigin="anonymous")
    // Enlace a estilos Neobrutalistas globales (necesario para los botones, tipografía, etc.)
    // Asume que tienes un archivo CSS global que carga la tipografía (Bebas Neue, JetBrains Mono)
    link(rel="stylesheet", href="/css/layouts/cabecera.css") 
    
    // ESTILOS ESPECÍFICOS PARA LA PÁGINA DE INICIO 
    style.
      body {
        /* Fondo Gris Claro Neobrutalista */
        background-color: #e0e0e0; 
      }
      .center-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }
      .neobrutalista-welcome-card {
        /* Fondo Gris Claro Neobrutalista */
        background-color: #e0e0e0; 
        
        /* Borde y Sombra Proyectada */
        border: 4px solid #000;
        box-shadow: 10px 10px 0px 0px #003366; /* Sombra Azul Oscuro */
        
        /* Neobrutalista: sin bordes redondeados */
        border-radius: 0 !important; 
        padding: 40px 30px; /* Más espacio interior */
        max-width: 500px;
        width: 100%;
      }
      .neobrutalista-heading {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 3rem;
        color: #ff00ff; /* Rosa Fosforito para el título principal */
        text-transform: uppercase;
        margin-bottom: 30px;
        border-bottom: 4px solid #000;
        padding-bottom: 15px;
      }
      .action-list a {
        margin-top: 15px; /* Espacio entre botones */
      }


  body
    .center-container
        .neobrutalista-welcome-card
          h1.neobrutalista-heading.text-center Únete a Camisetones Guapas
        
          // Botones de acción
          div.d-grid.gap-3.action-list 
            // Usamos la clase neobrutalista-button (Azul Oscuro / Hover Rosa)
            a(href="/auth/login", class="btn btn-lg neobrutalista-button") INICIAR SESIÓN
            
            // Usamos una variante (ej: un botón de acento) o la misma clase
            a(href="/auth/register", class="btn btn-lg neobrutalista-button") REGISTRARSE

    // Script de Bootstrap 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous")