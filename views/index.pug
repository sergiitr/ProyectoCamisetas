doctype html
html
  head
    title Inicio Neobrutalista
    // Enlace a los archivos CSS de Bootstrap
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", crossorigin="anonymous")
    // Enlace a estilos Neobrutalistas ESPECÍFICOS para esta vista
    link(rel="stylesheet", href="/css/mix/index.css") 
      
  body.index-body.d-flex.justify-content-center.align-items-center
    // El contenedor principal ya no necesita margin-top, lo centramos con Flexbox
    .container.index-container 
      
      // LA NUEVA TARJETA:
      .neobrutalista-card.p-5 
        h1.neobrutalista-heading.text-center Únete a Camisetones Guapas
      
        // Botones de acción
        div.d-grid.gap-3.action-list 
          a.neobrutalista-button(href="/auth/login", class="btn btn-lg neobrutalista-button") INICIAR SESIÓN
          a.neobrutalista-button(href="/auth/register", class="btn btn-lg neobrutalista-button-acento") REGISTRARSE

    // Script de Bootstrap 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", crossorigin="anonymous")